<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".three_activity">

    <EditText
        android:id="@+id/text_view3"
        android:layout_width="320dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/edit_t_color"
        android:textColor="@color/white"

        android:hint="Введите цифру"
        android:textColorHint="@color/btn_color"
        />

    <Button
        android:id="@+id/go_2_act_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_view3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:text="Перейти"
        android:textColor="@color/white"
        android:backgroundTint="@color/btn_color"
        android:paddingHorizontal="40dp"
        android:paddingVertical="7dp"
        android:background="@drawable/btn_style"
        />


</androidx.constraintlayout.widget.ConstraintLayout>